{
  "name": "Aigent Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "installNpmPackageManager": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "TypeScript.tsserver-standard",
        "cline.cline-extension@2.1.0",
        "GitHub.copilot",
        "saoudrizwan.claude-dev"
      ],
      "settings": {
        "python.linting.pylintArgs": [
          "--load-plugins=pylint.extensions.docparams",
          "--rcfile=${containerWorkspaceFolder}/.pylintrc"
        ],
        "python.analysis.extraPaths": ["/workspaces/Aigent/backend"],
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gcloud,target=/home/node/.config/gcloud,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.openai,target=/home/node/.openai,type=bind"
  ],
  "forwardPorts": [3000, 8000],
  "remoteEnv": {
    "GOOGLE_APPLICATION_CREDENTIALS": "/home/node/.config/gcloud/application_default_credentials.json",
    "OPENAI_API_KEY": "/home/node/.openai/key"
  }
}
